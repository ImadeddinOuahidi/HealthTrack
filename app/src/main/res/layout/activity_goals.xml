<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals - Challenges"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp" />

        <!-- Hydration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydration Goal (ml)"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtHydrationGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter total ml (e.g. 2000)"
            android:inputType="number" />
        <ProgressBar
            android:id="@+id/progressHydrationGoal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="2000"
            android:progressTint="@android:color/holo_blue_light"
            android:layout_marginBottom="16dp" />

        <!-- Sleep -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Goal (hrs)"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtSleepGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter hours (e.g. 8)"
            android:inputType="numberDecimal" />
        <ProgressBar
            android:id="@+id/progressSleepGoal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="8"
            android:progressTint="@android:color/holo_purple"
            android:layout_marginBottom="16dp" />

        <!-- Steps -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step Goal (steps)"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtStepGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter total steps (e.g. 10000)"
            android:inputType="number" />
        <ProgressBar
            android:id="@+id/progressStepGoal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="10000"
            android:progressTint="@android:color/holo_green_light"
            android:layout_marginBottom="16dp" />

        <!-- Challenge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge Goal (days)"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtChallengeGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter total days (e.g. 7)"
            android:inputType="number" />
        <ProgressBar
            android:id="@+id/progressChallenge"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="7"
            android:progressTint="@android:color/holo_orange_light"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSaveGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Goals"
            android:backgroundTint="#94d8d2"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
