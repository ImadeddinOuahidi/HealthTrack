<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLowest"
    android:fillViewport="true"
    tools:context=".NotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Notifications &amp; Reminders"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textStyle="bold" />

        <!-- Hydration Reminder Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/colorSecondary">

                <ImageView
                    android:id="@+id/hydration_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/hydration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hydration_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Hydration Reminder"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    app:layout_constraintStart_toEndOf="@id/hydration_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHydration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hydration_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get reminders at a regular interval."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintStart_toStartOf="@id/hydration_title"
                    app:layout_constraintTop_toBottomOf="@id/hydration_title" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilHydrationInterval"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Interval (minutes)"
                    app:layout_constraintTop_toBottomOf="@id/hydration_desc">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHydrationInterval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sleep Reminder Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/colorSecondary">

                <ImageView
                    android:id="@+id/sleep_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/sleep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sleep_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Sleep Reminder"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    app:layout_constraintStart_toEndOf="@id/sleep_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sleep_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get a reminder for your bedtime."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintStart_toStartOf="@id/sleep_title"
                    app:layout_constraintTop_toBottomOf="@id/sleep_title" />

                <TextView
                    android:id="@+id/tvSleepTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/time_selector_background"
                    android:padding="16dp"
                    android:text="Select Time"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/sleep_desc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Steps Reminder Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/colorSecondary">

                <ImageView
                    android:id="@+id/steps_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/footstep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/steps_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Daily Steps Reminder"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    app:layout_constraintStart_toEndOf="@id/steps_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/steps_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get a reminder to complete your steps."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintStart_toStartOf="@id/steps_title"
                    app:layout_constraintTop_toBottomOf="@id/steps_title" />

                <TextView
                    android:id="@+id/tvStepsTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/time_selector_background"
                    android:padding="16dp"
                    android:text="Select Time"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    app:layout_constraintTop_toBottomOf="@id/steps_desc" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveReminders"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:text="Save Reminders"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>
</ScrollView>
