<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements &amp; Rewards"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep going! Unlock badges as you progress."
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="20dp"/>

        <!-- Badge Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Badge 1 -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_blue_light"
                android:padding="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_compass"
                    android:tint="@android:color/white"
                    android:contentDescription="Badge 1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Streak"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Badge 2 -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_green_light"
                android:padding="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="@android:color/white"
                    android:contentDescription="Badge 2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep Champ"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Badge 3 -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"
                android:padding="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_directions"
                    android:tint="@android:color/white"
                    android:contentDescription="Badge 3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10k Steps"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Badge 4 -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:padding="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="@android:color/white"
                    android:contentDescription="Badge 4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Master"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Badge 5 -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_purple"
                android:padding="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="@android:color/white"
                    android:contentDescription="Badge 5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal Setter"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>