<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F5F5"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Counter"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="30dp"/>

    <!-- Big Step Count -->
    <TextView
        android:id="@+id/txtSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8,542 Steps"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="20dp"/>

    <!-- Step Progress -->
    <ProgressBar
        android:id="@+id/progressSteps"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:progress="85"
        android:max="100"
        android:progressTint="@android:color/holo_green_light"
        android:layout_marginBottom="20dp"/>

    <!-- Distance & Calories -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 6.2 km"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: 320 kcal"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Weekly Graph Placeholder -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Step Graph"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="Steps Graph Placeholder"/>
</LinearLayout>