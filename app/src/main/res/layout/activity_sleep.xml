<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F5F5"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep Tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"/>

    <!-- Card for Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/edtBedtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bedtime (e.g., 10:30 PM)"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/edtWakeup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wake-up Time (e.g., 6:30 AM)"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <Spinner
            android:id="@+id/spinnerSleepQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSaveSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Sleep Log"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Graph Placeholder -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Sleep Pattern"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="Sleep Graph Placeholder"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
