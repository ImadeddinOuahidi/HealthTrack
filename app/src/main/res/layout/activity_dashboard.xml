<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/profileIV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="Profile"
                android:src="@android:drawable/ic_menu_myplaces"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/userNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imad"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/settingsIBTN"
                android:layout_width="116dp"
                android:layout_height="49dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Settings"
                android:src="@android:drawable/ic_menu_manage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/overviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/overviewTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Overview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/hydrationLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydration: 1200 / 2000 ml"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/hydrationPB"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="60"
                android:max="100"
                android:progressTint="@android:color/holo_blue_light"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/sleepLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep: 7.5 hrs / 8 hrs"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/sleepPB"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="90"
                android:max="100"
                android:progressTint="@android:color/holo_purple"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/stepsLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps: 8500 / 10000"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/stepsPB"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="85"
                android:max="100"
                android:progressTint="@android:color/holo_green_light"/>
        </LinearLayout>

        <TextView
            android:id="@+id/quickNavTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Navigation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <GridLayout
            android:id="@+id/navigationGrid"
            android:layout_width="317dp"
            android:layout_height="240dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="4"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/hydrationBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Hydration" />

            <Button
                android:id="@+id/sleepBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sleep" />

            <Button
                android:id="@+id/stepsBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Steps" />

            <Button
                android:id="@+id/goalsBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Goals" />

            <Button
                android:id="@+id/focusTimerBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Focus Timer" />

            <Button
                android:id="@+id/achievementsBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Achievements" />

            <Button
                android:id="@+id/reportsBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Reports" />

            <Button
                android:id="@+id/notificationsBTN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Notifications" />
        </GridLayout>
    </LinearLayout>
</ScrollView>
