<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="40dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6f5f4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profileCard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="#94d8d2"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/profileInitialTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="I"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorOnPrimary" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/userInfoLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back,"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/userNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imad"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/logoutIBTN"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:contentDescription="Logout"
                    android:src="@drawable/logout" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/overviewTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:text="Today's Overview"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/overviewCard"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/overviewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6f5f4"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Hydration Circle -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/hydrationContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/sleepContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/hydrationPB"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:progress="60"
                            app:indicatorColor="@color/accentBlue"
                            app:trackColor="#E0E0E0"
                            app:trackThickness="10dp"
                            app:indicatorSize="90dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hydrationPercentTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textStyle="bold"
                            android:textColor="@color/accentBlue"
                            app:layout_constraintBottom_toTopOf="@id/hydrationIcon"
                            app:layout_constraintEnd_toEndOf="@id/hydrationPB"
                            app:layout_constraintStart_toStartOf="@id/hydrationPB"
                            app:layout_constraintTop_toTopOf="@id/hydrationPB" />

                        <ImageView
                            android:id="@+id/hydrationIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/hydration"
                            android:layout_marginTop="4dp"
                            app:tint="@color/accentBlue"
                            app:layout_constraintBottom_toBottomOf="@id/hydrationPB"
                            app:layout_constraintEnd_toEndOf="@id/hydrationPB"
                            app:layout_constraintStart_toStartOf="@id/hydrationPB"
                            app:layout_constraintTop_toBottomOf="@id/hydrationPercentTV" />

                        <TextView
                            android:id="@+id/hydrationLabelTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Hydration"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/hydrationPB" />

                        <TextView
                            android:id="@+id/hydrationValueTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="1200 / 2000 ml"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/hydrationLabelTV" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Sleep Circle -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/sleepContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/stepsContainer"
                        app:layout_constraintStart_toEndOf="@id/hydrationContainer"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/sleepPB"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:progress="94"
                            app:indicatorColor="@color/accentPurple"
                            app:trackColor="#E0E0E0"
                            app:trackThickness="10dp"
                            app:indicatorSize="90dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/sleepPercentTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94%"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textStyle="bold"
                            android:textColor="@color/accentPurple"
                            app:layout_constraintBottom_toTopOf="@id/sleepIcon"
                            app:layout_constraintEnd_toEndOf="@id/sleepPB"
                            app:layout_constraintStart_toStartOf="@id/sleepPB"
                            app:layout_constraintTop_toTopOf="@id/sleepPB" />

                        <ImageView
                            android:id="@+id/sleepIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sleep"
                            android:layout_marginTop="4dp"
                            app:tint="@color/accentPurple"
                            app:layout_constraintBottom_toBottomOf="@id/sleepPB"
                            app:layout_constraintEnd_toEndOf="@id/sleepPB"
                            app:layout_constraintStart_toStartOf="@id/sleepPB"
                            app:layout_constraintTop_toBottomOf="@id/sleepPercentTV" />

                        <TextView
                            android:id="@+id/sleepLabelTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Sleep"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sleepPB" />

                        <TextView
                            android:id="@+id/sleepValueTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="7.5 / 8 hrs"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sleepLabelTV" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Steps Circle -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/stepsContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/sleepContainer"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/stepsPB"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:progress="85"
                            app:indicatorColor="@color/accentGreen"
                            app:trackColor="#E0E0E0"
                            app:trackThickness="10dp"
                            app:indicatorSize="90dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/stepsPercentTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textStyle="bold"
                            android:textColor="@color/accentGreen"
                            app:layout_constraintBottom_toTopOf="@id/stepsIcon"
                            app:layout_constraintEnd_toEndOf="@id/stepsPB"
                            app:layout_constraintStart_toStartOf="@id/stepsPB"
                            app:layout_constraintTop_toTopOf="@id/stepsPB" />

                        <ImageView
                            android:id="@+id/stepsIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/footstep"
                            android:layout_marginTop="4dp"
                            app:tint="@color/accentGreen"
                            app:layout_constraintBottom_toBottomOf="@id/stepsPB"
                            app:layout_constraintEnd_toEndOf="@id/stepsPB"
                            app:layout_constraintStart_toStartOf="@id/stepsPB"
                            app:layout_constraintTop_toBottomOf="@id/stepsPercentTV" />

                        <TextView
                            android:id="@+id/stepsLabelTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Steps"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/stepsPB" />

                        <TextView
                            android:id="@+id/stepsValueTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="8500 / 10000"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/stepsLabelTV" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/quickNavTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="12dp"
            android:text="Quick Navigation"
            android:textAppearance="?attr/textAppearanceTitleLarge" />

        <GridLayout
            android:id="@+id/navigationGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hydrationBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/hydration" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sleepBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/sleep" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/stepsBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/footstep" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/goalsBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/target" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goals"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/focusTimerBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/timer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focus Timer"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievementsBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/medal_" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievements"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reportsBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reports"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notificationsBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#e6f5f4"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/notification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </LinearLayout>
</ScrollView>