<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F7"
    tools:context=".HydrationActivity">

    <TextView
        android:id="@+id/hydrationTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hydration Tracker"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/progressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hydrationTitleTV">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/hydrationCircularProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="60"
                app:indicatorSize="150dp"
                app:indicatorColor="#2196F3"
                app:trackColor="#CFD8DC"
                app:trackThickness="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dailyTotalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200 ml"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/goalTV"
                app:layout_constraintEnd_toEndOf="@+id/hydrationCircularProgress"
                app:layout_constraintStart_toStartOf="@+id/hydrationCircularProgress"
                app:layout_constraintTop_toTopOf="@+id/hydrationCircularProgress"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/goalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="of 2000 ml"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/hydrationCircularProgress"
                app:layout_constraintEnd_toEndOf="@+id/dailyTotalTV"
                app:layout_constraintStart_toStartOf="@+id/dailyTotalTV"
                app:layout_constraintTop_toBottomOf="@+id/dailyTotalTV" />

            <TextView
                android:id="@+id/quickAddTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Quick Add"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hydrationCircularProgress"
                app:layout_constraintTop_toTopOf="@id/hydrationCircularProgress" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add250BTN"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="+250 ml"
                android:backgroundTint="#94d8d2"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hydrationCircularProgress"
                app:layout_constraintTop_toBottomOf="@id/quickAddTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add500BTN"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="+500 ml"
                app:cornerRadius="8dp"
                android:backgroundTint="#94d8d2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hydrationCircularProgress"
                app:layout_constraintTop_toBottomOf="@+id/add250BTN" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/customBTN"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Custom"
                android:textColor="@color/black"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hydrationCircularProgress"
                app:layout_constraintTop_toBottomOf="@+id/add500BTN" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/logTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Today's Log"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressCard" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logTitle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/hydrationGraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/noDataTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No hydration data to display."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:visibility="gone" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
