<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLowest"
    tools:context=".RelaxationActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Focus Timer"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/timerProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="100"
        app:indicatorSize="280dp"
        app:indicatorColor="#94d8d2"
        app:trackColor="#94d8d2"
        app:trackThickness="20dp"
        app:layout_constraintBottom_toTopOf="@+id/fabPlayPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/timerProgress"
        app:layout_constraintEnd_toEndOf="@+id/timerProgress"
        app:layout_constraintStart_toStartOf="@+id/timerProgress"
        app:layout_constraintTop_toTopOf="@id/timerProgress" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:contentDescription="Start Timer"
        android:backgroundTint="#94d8d2"
        android:src="@drawable/ic_play"
        app:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/durationChips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReset"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_reset"
        app:iconSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/fabPlayPause"
        app:layout_constraintStart_toEndOf="@+id/fabPlayPause"
        app:layout_constraintTop_toTopOf="@+id/fabPlayPause" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/durationChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip15min"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 min" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip25min"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="25 min" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip45min"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 min" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>